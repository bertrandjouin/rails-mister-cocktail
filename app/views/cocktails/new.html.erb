<div class="main-container">
  <div class="small-container">
    <h1>Add a new Cocktail</h1>
      <%= simple_form_for [@cocktail] do |f| %>
        <div class="form-inputs">
          <%= f.input :name %>
        </div>
        <div class="btn btn-primary pink"><%= f.button :submit,'Add to Mister Cocktail' %>
        </div>
      <% end %>
  </div>
</div>
