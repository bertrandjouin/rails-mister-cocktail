<div class="main-container">
  <div class="container">
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://source.unsplash.com/1600x900/?cocktail-<%=@cocktail.name%>')">
      <h1><%= @cocktail.name.capitalize %></h1>
    </div>
    <h1>Ingr√©dients (<%= @cocktail.doses.count %>): </h1>
      <% @cocktail.doses.each do |dose| %>
        <div class="card-dose">
          <img src="https://source.unsplash.com/400x300/?<%=dose.ingredient.name%>" />
          <div class="card-dose-infos">
            <h2> <%= dose.ingredient.name %></h2>
            <p>Quantity : <%= dose.description %></p>
            <br>
            <%= link_to '<i class="fas fa-trash"></i>'.html_safe, dose_path(dose), method: :delete, data: { confirm: 'are you sure?'} %>
          </div>
        </div>
      <% end %>
      <%= link_to "Add ingredients", new_cocktail_dose_path(@cocktail), class: 'btn btn-primary pink mt-5'%>
    </div>
</div>


