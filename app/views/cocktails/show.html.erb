<h1><%= @cocktail.name.capitalize %> recipe</h1>

<% @cocktail.doses.each do |dose| %>
  <li ><%= dose.description %> -
      <%= dose.ingredient.name %>
      <%= link_to "delete ingredient", dose_path(dose), method: :delete, data: { confirm: 'are you sure?'} %>
    </li>
<% end %>

<%= link_to "add ingredients", new_cocktail_dose_path(@cocktail) %>
<%= link_to "back to cocktails list", cocktails_path(@cocktail) %>


